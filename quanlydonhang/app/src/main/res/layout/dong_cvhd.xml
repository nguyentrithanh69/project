<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8FBDEE">

    <TextView
        android:id="@+id/ngaygiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ngaylap"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:gravity="center"
        android:text="Ngày giao"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/makh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ngaygiao"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Mã khách hàng"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ngaylap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ngày lập"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="150dp" />

    <ImageView
        android:id="@+id/xoahd"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@id/suahd"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_delete" />

    <ImageView
        android:id="@+id/suahd"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_edit" />

    <ImageView
        android:id="@+id/thongtin"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@id/xoahd"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_infor" />

</RelativeLayout>